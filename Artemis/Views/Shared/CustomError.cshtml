@{
    ViewData["Title"] = "Error";
    Exception? ex = ViewData["HandleException"] as Exception;
}

<div class="container">

    <div class="card rounded-3 mb-4 shadow">
        <div class="d-inline-flex">
            <img class="me-2" src="~/images/error.png" width="60" height="45" />
            <h1 class="text-danger ms-2">Error.</h1>
        </div>
        <h2 class="text-danger ms-2">An error occurred while processing your request.</h2>
    </div>

    <div class="card mt-4">
        <div class="d-inline-flex ms-2">
            <h4 class="fw-normal">Message: </h4>
            <h4 class="ms-2">@ex?.Message</h4>
        </div>
        <div class="mt-4 ms-2">@ex?.StackTrace</div>
    </div>

</div>

