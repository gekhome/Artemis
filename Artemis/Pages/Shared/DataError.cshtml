@page

@model Artemis.Pages.Shared.DataErrorModel

@{
    Layout = "_LayoutError";
    ViewData["Title"] = "Data Error";
}

<div class="container">
    <div class="card rounded-3 mb-4 shadow">
        <div class="d-inline-flex">
            <img class="me-2" src="~/images/error.png" width="60" height="45" />
            <h2 class="text-danger ms-2">Data error</h2>
        </div>
        <h3 class="text-danger ms-2">Your request cannot be processed at this time.</h3>
    </div>

    <div class="mt-4 p-4">
        <div class="d-inline-flex ms-2">
            <h4 class="ms-2">@Model.ErrorMessage</h4>
        </div>
    </div>
    <div class="mt-2 d-inline-flex float-end">
        <button class="gek-btn-danger" onclick="javascript:window.close();opener.window.focus();">Close this page</button>
    </div>
</div>


